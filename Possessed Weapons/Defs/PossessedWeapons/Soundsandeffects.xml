<!--=============================== Staff Sounds ================================-->

<SoundDef>
<defName>BotchJob_ArchmageStaffCast</defName>
<context>MapOnly</context>
<maxSimultaneous>1</maxSimultaneous>
<subSounds>
     <li>
	<grains>
	  <li Class="AudioGrain_Clip">
	  <clipPath>Misc/BotchJob_ArchmageStaffCast</clipPath>
          </li>
	</grains>
        <volumeRange>25</volumeRange>
	<pitchRange>0.9~1.1</pitchRange>
     </li>
</subSounds>
</SoundDef>

<SoundDef>
    <defName>BotchJob_ArchmageStaffCharge</defName>
    <context>MapOnly</context>
    <sustain>True</sustain>
    <priorityMode>PrioritizeNearest</priorityMode>
    <subSounds>
      <li>
        <muteWhenPaused>True</muteWhenPaused>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Misc/BotchJob_ArchmageStaffCharge</clipPath>
          </li>
        </grains>
        <volumeRange>10</volumeRange>
        <pitchRange>0.9~1.1</pitchRange>
        <sustainLoop>False</sustainLoop>
        <sustainIntervalRange>0.2~0.7</sustainIntervalRange>
      </li>
    </subSounds>
  </SoundDef>

  <SoundDef>
    <defName>BotchJob_AutomatonCrossbowFire</defName>  
