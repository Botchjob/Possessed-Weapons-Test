<?xml version="1.0" encoding="utf-8" ?>
<Defs>



<!--=============================== Frost Impact Sound ================================-->

<ImpactSoundTypeDef>
<defName>BotchJob_FrostImpact</defName>
<playOnlyIfHitPawn>true</playOnlyIfHitPawn>
<soundDef>BotchJob_FrostImpact</soundDef>
</ImpactSoundTypeDef>

<SoundDef>
<defName>BotchJob_FrostImpact</defName>
<context>MapOnly</context>
<maxSimultaneous>2</maxSimultaneous>
<subSounds>
     <li>
	<grains>
	  <li Class="AudioGrain_Folder">
	  <clipFolderPath>Impact/BotchJob_FrostImpact</clipFolderPath>
          </li>
	</grains>
        <volumeRange>10</volumeRange>
	<pitchRange>0.9~1.1</pitchRange>
     </li>
</subSounds>
</SoundDef>

<!--=============================== Frost Impact Effect ================================-->

<EffecterDef>
    <defName>BotchJob_FrostImpact</defName>
       <children>
	<li>
		<subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
		<moteDef>BotchJob_FrostImpact</moteDef>
		<positionRadius>0.1</positionRadius>
		<burstCount>3</burstCount>
		<scale>1~1.4</scale>
		<spawnLocType>OnSource</spawnLocType>
	</li>
      </children>
</EffecterDef>

 <ThingDef ParentName="MoteBase">
    <defName>BotchJob_FrostImpact</defName>
	<altitudeLayer>MoteOverhead</altitudeLayer>
    <mote>
    <fadeInTime>0.04</fadeInTime>
	<solidTime>0.03</solidTime>
	<fadeOutTime>1</fadeOutTime>
    </mote>
    <graphicData>
      <drawSize>2</drawSize>
      <texPath>Things/Mote/FrostImpact</texPath>
    </graphicData>
  </ThingDef>


